<RubikSolver>:
	canvas:
		Rectangle:
			pos: self.pos
			size: self.size
			source: 'data/bg.png'

<MainMenu>:
	name: 'home'
	
	RelativeLayout:

		Label:
			text: 'Rubik Solv-O-Matic'
			font_size: 30
			pos_hint: {'center_y': 0.875}
			bold: True
			color: (0, 1, 0, 1)
			
		Label:
			text: 'Insert the cube and click Scan to continue.'
			font_size: 20
			pos_hint: {'center_y': 0.75}
			color: (0, 1, 0, 1)
			
		Button:
			text: 'Settings'
			font_size: 20
			background_color: (0.5, 0.5, 0.5, 1)
			size_hint: None, None
			width: 100
			height: 40
			pos_hint: {'left': 0, 'bottom': 0}
			on_release:
				app.go_screen('settings', 'right')

		Button:
			text: 'Scan'
			font_size: 20
			bold: True
			background_color: (0, 1, 0, 1)
			size_hint: None, None
			width: 100
			height: 40
			pos_hint: {'center_x': 0.5, 'center_y': 0.5}
			on_release:
				app.go_screen('scan', 'None')

<Settings>:
	name: 'settings'
	
	TabbedPanel:
		id: tp
		do_default_tab: False
		
		TabbedPanelItem:
			id: tab_sites
			text: 'Sites'
			BoxLayout:
				Label:
					text: 'Sites Tab'
		
		TabbedPanelItem:
			id: tab_grip
			text: 'Grippers'
			BoxLayout:
				BoxLayout:
					orientation: 'vertical'
					
					Label:
						text: 'Gripper A'
						font_size: 20
					
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Closed'
						Slider:
							id: gripa_closed
							min: app.gripper_a['closed'] - 20
							max: app.gripper_a['closed'] + 20
							value: app.gripper_a['closed']
							step: 1
							on_value: app.update_settings('GripperA', 'closed', self.value)

					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Open'
						Slider:
							id: gripa_open
							min: app.gripper_a['open'] - 20
							max: app.gripper_a['open'] + 20
							value: app.gripper_a['open']
							step: 1
							on_value: app.update_settings('GripperA', 'open', self.value)
							
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Load'
						Slider:
							min: app.gripper_a['load'] - 20
							max: app.gripper_a['load'] + 20
							value: app.gripper_a['load']
							step: 1
							on_value: app.update_settings('GripperA', 'load', self.value)
							
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Pos:  0'
						Slider:
							min: app.gripper_a['pos0'] - 20
							max: app.gripper_a['pos0'] + 20
							value: app.gripper_a['pos0']
							step: 1
							on_value: app.update_settings('GripperA', 'pos0', self.value)

					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Pos: 90'
						Slider:
							min: app.gripper_a['pos90'] - 20
							max: app.gripper_a['pos90'] + 20
							value: app.gripper_a['pos90']
							step: 1
							on_value: app.update_settings('GripperA', 'pos90', self.value)
							
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Pos:180'
						Slider:
							min: app.gripper_a['pos180'] - 20
							max: app.gripper_a['pos180'] + 20
							value: app.gripper_a['pos180']
							step: 1
							on_value: app.update_settings('GripperA', 'pos180', self.value)
							
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Pos:270'
						Slider:
							min: app.gripper_a['pos270'] - 20
							max: app.gripper_a['pos270'] + 20
							value: app.gripper_a['pos270']
							step: 1
							on_value: app.update_settings('GripperA', 'pos270', self.value)

				BoxLayout:
					orientation: 'vertical'
					
					Label:
						text: 'Gripper B'
						font_size: 20
					
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Closed'
						Slider:
							min: app.gripper_b['closed'] - 20
							max: app.gripper_b['closed'] + 20
							value: app.gripper_b['closed']

					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Open'
						Slider:
							min: app.gripper_b['open'] - 20
							max: app.gripper_b['open'] + 20
							value: app.gripper_b['open']
							
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Load'
						Slider:
							min: app.gripper_b['load'] - 20
							max: app.gripper_b['load'] + 20
							value: app.gripper_b['load']
							
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Pos:  0'
						Slider:
							min: app.gripper_b['pos0'] - 20
							max: app.gripper_b['pos0'] + 20
							value: app.gripper_b['pos0']

					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Pos: 90'
						Slider:
							min: app.gripper_b['pos90'] - 20
							max: app.gripper_b['pos90'] + 20
							value: app.gripper_b['pos90']
							
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Pos:180'
						Slider:
							min: app.gripper_b['pos180'] - 20
							max: app.gripper_b['pos180'] + 20
							value: app.gripper_b['pos180']
							
					BoxLayout:
						orientation: 'horizontal'
						Button:
							text: 'Pos:270'
						Slider:
							min: app.gripper_b['pos270'] - 20
							max: app.gripper_b['pos270'] + 20
							value: app.gripper_b['pos270']
				
		TabbedPanelItem:
			id: tab_test
			text: 'Test'
			BoxLayout:
				Label:
					text: 'Test Tab'